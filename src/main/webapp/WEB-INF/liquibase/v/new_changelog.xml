<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog ../dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <preConditions>
        <dbms type="mysql" />
    </preConditions>

    <changeSet id="1" author="zhangsan">
        <comment>create table student</comment>
        <createTable tableName="gv_student">
           <column name="id" type="int"/>
           <column name="age" type="int"/>
           <column name="name" type="varchar(32)"/>
        </createTable>
    </changeSet>
    <changeSet id="1-1" author="zhangsan">
    	<addColumn tableName="gv_student">
     		 <column name="hobby" type="varchar(64)"/>
     	</addColumn>
    </changeSet>
     <changeSet id="1-2" author="zhangsan">
    	<addColumn tableName="gv_student">
     		 <column name="email" type="varchar(64)"/>
     	</addColumn>
    </changeSet>
     <changeSet id="1-3" author="zhangsan">
    	<addColumn tableName="gv_student">
     		 <column name="score" type="int"/>
     	</addColumn>
    </changeSet>
</databaseChangeLog>